        abstract_unstem_search^20
        abstract_search^5
      </str>
      <str name="pf3_summary">
        abstract_search^3
      </str>
      <str name="pf2_summary">
        abstract_search^2
      </str>

      <bool name="facet">true</bool>
      <int name="facet.mincount">1</int>
      <int name="facet.limit">21</int>
      <str name="facet.field">genre_facet</str>
