      </str>
      <str name="pf_subject"> <!-- (phrase) -->
        topic_unstem_search^250
        topic_search^150
        geographic_unstem_search^150
        geographic_search^100
        era_unstem_search^100
        era_search^50
        subject_other_unstem_search^25
        subject_other_search^25
