<% if show_sort_and_per_page? and !blacklight_config.per_page.blank? %>
  <span class="sr-only"><%= t('blacklight.search.per_page.title') %></span>
  <div class="page-count">
    show
    <%- per_page_options_for_select.each_with_index do |(label, count), i| %>
      <% if count == current_per_page %>
        <span><%= count %></span>
      <% else %>
        <span><%= link_to(count, url_for(@search_state.params_for_search(per_page: count))) %></span>
      <% end %>
    <%- end -%>
    per page
  </div>
<% end %>
